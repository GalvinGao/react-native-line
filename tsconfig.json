{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES6"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "babel.config.js"],
  "include": ["src/**/*"],
  "outDir": "./dist"
}
